switch_to() {
    local sname=$1

    if [[ -z "$TMUX" ]]; then
        tmux attach-session -t "$sname"
    else
        tmux switch-client -t "$sname"
    fi
}

selected_dir=$(find "$HOME"/.local "$HOME"/.config "$HOME"/WORKSPACE "$HOME"/COURSES -maxdepth 1 -mindepth 1 -type d | fzf)

if [[ -z "$selected_dir" ]]; then
    exit 0
fi

session_name=$(basename "$selected_dir" | tr ".,: " "____")

if tmux has-session -t="$session_name" 2>/dev/null; then
    switch_to "$session_name"
else
    tmux new-session -ds "$session_name" -c "$selected_dir"
    switch_to "$session_name"
    tmux send-keys -t "$session_name" "tmux-session-bootstrapper" ^M
fi
